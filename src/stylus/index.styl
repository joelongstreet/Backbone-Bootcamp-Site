@import 'nib'

$color-dark = #174c4f;
$color-mid = #207178;
$color-light = #f5e9be;
$color-highlight = #ff9666;
$color-emphasize = #ffe184;

$font-primary = 'Fjalla One', 'Helvetica', 'Arial', sans-serif
$font-secondary = 'Droid Serif', 'Georgia', 'Times New Roman', serif
$font-tertiary = 'Inconsolata', 'Monaco', monospace

*, h1, h2, h3, h4, h5, h6, ul, li
  margin 0
  padding 0
  font-weight normal
ul
  list-style-type none

html, body
  height 100%

section
  z-index 2
  position relative
  padding 50px 0
  overflow-x hidden

@import 'section-1'
@import 'section-2'
@import 'section-3'
@import 'section-4'
@import 'section-5'
@import 'section-6'
@import 'section-7'
@import 'section-8'
@import 'skeletor'