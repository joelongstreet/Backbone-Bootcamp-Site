#section-1
  height 100%
  background-image url('img/paper-texture.png')
  background-repeat repeat
  background-color $color-mid

  .flex
    width 80%
    height 100%
    margin auto
    display flex

  header
    flex-grow 3
    &:first-child
      text-align right
  header, .backbone
    margin auto
    width 300px
  .backbone
    flex-grow 1
    height 80%
    .container
      background-color $color-dark
      width 90%
      height 100%
      margin auto

  h1
    font-family $font-primary
    color $color-emphasize
    text-transform uppercase
    font-size 5em
  h2
    font-family $font-tertiary
    color $color-highlight