#section-2
  background-color $color-light
  padding 50px 0

  .flex
    display flex
    flex-wrap wrap

  h2
    width 80%
    margin-left 20%
    margin-bottom 25px
    font-family $font-secondary
    color $color-mid
    font-size 2.5em

    .emphasize
      font-size 2em
      color $color-highlight
      font-family $font-primary
      text-transform uppercase

  p
    color $color-highlight
    font-family $font-tertiary
    font-size 2em
    margin-left 30%
