#section-3
  background-image url('img/paper-texture.png')
  background-repeat repeat
  background-color $color-dark
  width 100%

  .flex
    height 100%
    display flex

  .bones
    margin 30px auto auto 70px
    width 15%
    height 90%
    img
      width 100%
      &:nth-child(2)
        width 80%
        margin-top -25px
      &:nth-child(3)
        margin-top 20px
      &:nth-child(even)
        margin-left 110px
        
  .text
    width 60%

  h2
    font-family $font-primary
    font-size 3em
    text-transform uppercase
    color $color-light
    margin-bottom 70px
    text-shadow 1px 1px 2px black

  li
    color $color-emphasize
    font-family $font-secondary
    font-size 1.25em
    margin-bottom 75px
    &:before
      color $color-mid
      font-family $font-tertiary
      content '//'
      padding-right 15px
      font-size 1.1em
    &:nth-child(1)
      padding-left 15%
    &:nth-child(2)
      padding-left 10%
    &:nth-child(3)
      padding-left 5%
    &:nth-child(4)
      padding-left 0%