#section-4
  background-color $color-highlight
  color $color-light
  text-align center
  a
    color $color-light
    text-decoration none
    &:hover
      color $color-highlight
      background-color $color-light

  h2
    font-size 2.5em
  h3
    font-size 3.75em
    margin-bottom 15px
  h2, h3
    font-family $font-primary
    text-transform uppercase
  h4
    font-size 2em
    font-family $font-tertiary
    color $color-highlight
    background-color $color-light
    display inline-block
    padding 5px 15px
    margin-bottom 30px
  h5
    font-family $font-secondary
    font-size 2em
    margin-bottom 10px
  ul
    font-family $font-tertiary
  li
    display inline-block
    a
      padding 5px

  .bones
    height 300px