#section-5
  background-image url('img/paper-texture.png')
  background-repeat repeat
  background-color $color-dark
  font-family $font-primary
  font-size 3em
  text-transform uppercase
  color $color-light
  width 100%
  padding 100px 0

  .flex
    display flex
    flex-wrap wrap
    width 80%
    margin auto

  h3
    line-height 0
    margin-top 20px
    margin-bottom 55px
    color $color-mid
    text-align center
    font-size 2em
    width 100%
    text-shadow 0 0 5px rgba(0,0,0,.25)

  h2
    width 40%
    text-shadow 0 1px 1px rgba(0,0,0,.25)
  h2:first-child
    text-align right
  h2:nth-child(2)
    margin-left 20%
  h2:last-child
    font-size 1.1em
    text-align center
    width 100%