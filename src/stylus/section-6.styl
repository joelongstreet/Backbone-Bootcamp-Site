#section-6
  background-color $color-emphasize

  h2
    color $color-mid
    font-family $font-primary
    font-size 4em
    text-transform uppercase
    text-align center
    margin-bottom 30px
    text-shadow 0 1px 0 #fff
  h3
    color $color-mid
    font-family $font-secondary
    font-size 2em
    text-align center
    text-shadow 0 1px 0 #fff
  ul
    overflow hidden
    width auto
    margin auto
    display flex
    flex-wrap wrap
  li
    font-family $font-tertiary
    color $color-highlight
    font-size 1.75em
    display inline-block
    margin 0 auto 30px
    background-color invert($color-emphasize)
    padding 20px
    box-shadow 0 2px 0 rgba(0,0,0,0.5), 0 1px 20px rgba(0,0,0,0.25)